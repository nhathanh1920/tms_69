<div class="header">
  <div class="header-top">
    <div class="container">
      <div class="detail">
        <ul>
          <li><i class="glyphicon glyphicon-time" aria-hidden="true">
          </i><%= t ".phones" %></li>
          <li><i class="glyphicon glyphicon-time" aria-hidden="true">
          </i><%= t ".date" %></li>
        </ul>
      </div>
      <div class="indicate">
        <p><i class="glyphicon glyphicon-map-marker" aria-hidden="true">
        </i><%= t ".address" %></p>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
  <div class="container">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed"
              data-toggle="collapse"
              data-target="#bs-example-navbar-collapse-1"
              aria-expanded="false">
              <span class="sr-only"><%= t ".toggle" %></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <div class="navbar-brand">
              <h1>
                <a href="#"><%= t ".framgia" %>
                  <span>
                    <%= t ".test" %>
                  </span>
                </a>
              </h1>
            </div>
        </div>
        <div class="collapse navbar-collapse"
          id="bs-example-navbar-collapse-1">
          <nav class="link-effect-2" id="link-effect-2">
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li><%= link_to t("home"), root_path %></li>
                <% if current_user.admin? %>
                  <li><%= link_to t(".users"), admin_users_path %></li>
                  <li><%= link_to t(".exams"), admin_exams_path %></li>
                  <li><%= link_to t(".subjects"), admin_subjects_path %></li>
                  <li><%= link_to t(".levels"), admin_levels_path %></li>
                <% else %>
                  <li><%= link_to t("exam"), exams_path %></li>
                  <li><%= link_to t(".contribute"),
                    suggest_questions_path %></li>
                <% end %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <%= current_user.name %> <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to t(".profile"), edit_user_registration_path %></li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to t(".logout"), destroy_user_session_path,
                      method: :delete %>
                    </li>
                  </ul>
                </li>
              <% else %>
                <li><%= link_to t(".login"), new_user_session_path %></li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </nav>
  </div>
</div>
