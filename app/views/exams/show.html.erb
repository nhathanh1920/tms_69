<div class="col-md-10 col-md-offset-1 width-flash">
  <div class="row exam">
    <div class="col-md-8 col-md-offset-1">
      <div class="title">
        <%= render "shared/exam_status", exam: @exam %>
        <%= l @exam.started_at, format: :datetime_format %>
        <%= tag(:br) %>
        <center><b><h2><%= @exam.subject.name %></h2></b></center>
        <%= tag(:hr) %>
      </div>
      <%= render "questions" %>
    </div>
    <%= hidden_field_tag :remaining_time, @exam.get_remain_time %>
    <div class="col-md-2 col-md-offset-1 timer">
      <h4><%= t ".time_remain" %></h4>
      <div id="clock"></div>
    </div>
  </div>
</div>
